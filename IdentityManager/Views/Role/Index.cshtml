@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
<hr />

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Roles List</h2>
    </div>

    <div class="col-6 text-right">
        <a asp-action="Upsert" asp-controller="Role" class="btn btn-primary">Create New Role</a>
    </div>
</div>

<div class="p-4 border rounded">
    @if(Model.Count() > 0)
    {
        <table class="table table-striped-border">
            <tr class="table-secondary">
                <th>Id</th>
                <th>Name</th>                
                <th></th>
            </tr>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>                    
                    <td>
                        <div class="text-center">
                            <form method="post" asp-action="Delete" asp-controller="Role" asp-route-id="@item.Id">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this role ?')" class="btn btn-danger">DELETE</button>

                                <a asp-action="Upsert" asp-controller="Role" asp-route-id="@item.Id" class="btn btn-info text-right" style="cursor:pointer">Edit</a>                            
                            </form>

                            
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
</div>